{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "eslint.validate": ["javascript", "vue"],
  "eslint.options": {
    "extensions": [".js", ".vue"]
  },
  "files.autoSave": "onFocusChange",
  "files.associations": {
    "*.vue": "vue",
    "*.css": "tailwindcss"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "avoid",
  "editor.semanticTokenColorCustomizations": {
    "[One Dark Pro]": {
      // Apply to this theme only
      "enabled": true,
      "rules": {
        "magicFunction:python": "#ee0000",
        "function.declaration:python": "#990000",
        "*.decorator:python": "#0000dd",
        "*.typeHint:python": "#5500aa",
        "*.typeHintComment:python": "#aaaaaa"
      }
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  "black-formatter.args": ["--line-length", "79"],
  "flake8.args": ["--max-line-length=79"],
  "flake8.severity": {
    "E": "Error",
    "W": "Warning",
    "F": "Error",
    "C": "Warning",
    "N": "Information"
  },
  "autoDocstring.docstringFormat": "google-notypes",
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "css": "css",
    "dockerfile": "dockerfile",
    "git": "git-commit",
    "javascript": "javascript",
    "json": "jsonc",
    "markdown": "markdown",
    "sql": "sql",
    "vue html": "vue-html",
    "yaml": "yaml"
  },
  "cssPeek.peekFromLanguages": ["html", "vue", "javascript"],
  "indentRainbow.includedLanguages": ["html", "vue", "json", "yaml"],
  "npm-intellisense.importES6": true,
  "npm-intellisense.importQuotes": "'",
  "npm-intellisense.importLinebreak": "sameLine",
  "npm-intellisense.scanDevDependencies": true,
  "IDX.aI.enableInlineCompletion": true,
  "IDX.aI.enableCodebaseIndexing": true,
  "editor.quickSuggestions": {
    "strings": "on"
  }
}
